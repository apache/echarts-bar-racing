{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": false,
        "noImplicitReturns": false,
        "noImplicitAny": false,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}